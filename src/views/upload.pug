extends base.pug

block content 
    if errorMessage
        span=errorMessage
    form(method="POST") 
        input(type="text" maxlength=80  name="title" placeholder="Title" required)
        input(type="text" minlength=20 name="description" placeholder="Description" required)
        input(type="text" name="hashtags" placeholder="Hashtags, separated by comma." required)
        input(type="submit" value ="Upload video")